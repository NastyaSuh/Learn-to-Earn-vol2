<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Education_Site">

    <View
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#2ECC71"/>

    <TextView
        android:id="@+id/classs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7 класс"
        android:fontFamily="@font/roboto_slab"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_avatar"
        android:layout_width="170dp"
        android:layout_height="119dp"
        android:layout_alignBottom="@+id/header"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="241dp"
        android:layout_marginBottom="6dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="653dp"
        android:fontFamily="@font/roboto_slab"
        android:text="username"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <ImageButton
        android:id="@+id/theory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ImageBtn"
        android:src="@drawable/theory"
        android:layout_below="@id/classs"
        android:layout_marginTop="90dp"
        android:layout_marginStart="30dp"/>

    <ImageButton
        android:id="@+id/practice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ImageBtn"
        android:src="@drawable/practice"
        android:layout_toEndOf="@id/theory"
        android:layout_alignTop="@+id/theory"
        android:layout_marginStart="20dp" />

    <ImageView
        android:id="@+id/backtoProfile"
        android:layout_width="27dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="380dp"
        android:layout_marginBottom="3dp"
        app:srcCompat="@drawable/back" />

</RelativeLayout>